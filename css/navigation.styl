#navigation {
  > h1 {
    color: $white;
    font: normal 30px Georgia, serif;
    letter-spacing: 10px
    margin: 30px auto;
    position: relative;
    text-align: center;
    text-shadow: 0 2px 3px $black;
    text-transform: uppercase;
    z-index: 1;
    max-width: 1000px

    a {
      color: inherit;
      text-decoration: none;
      img {
        border: 0;
        max-width: 552px;
        width: 100%;
        vertical-align: middle;
      }
    }
    .nav-button {
      letter-spacing: 0px;
      width: 20px;
      transition: transform .15s
      outline: none;
      &.open {
        transform: rotate(90deg)
        opacity: 0.5
      }
    }
  }


  nav {
    background: transparent
    font-size: 14px;
    font-weight: bold;
    padding-bottom: 20px;
    text-align: center;
    width: 100%;
    z-index: 3;
    display: none

    ul {
      margin: 0;
      padding: 0;

      li {
        display: inline-block;
        width: 120px;

        &:first-child {
          border-left: 0;
          box-shadow: none;
        }

        a {
          color: $white;
          display: block;
          padding: 5px 0;
          text-align: center;
          text-decoration: none;
          width: 100%;

          &:hover,
          &.active {
            opacity: 1;
          }
        }
      }
    }
  }
}
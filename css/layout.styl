html {
  background: url("./images/big-wood.jpg") fixed center top;
  background-size: cover;
  font-family: "Open Sans", sans-serif;
  margin: 0;
  min-height: 100%;
  overflow-y: scroll;

  body {
    margin: 0;
    height: 100%;
    padding: 0 0 100px;
    position: relative;

    > h1 {
      color: $white;
      font: normal 30px Georgia, serif;
      letter-spacing: 10px
      margin: 30px 0 15px;
      position: relative;
      text-align: center;
      text-shadow: 0 2px 3px $black;
      text-transform: uppercase;
      z-index: 1;

      a {
        color: inherit;
        text-decoration: none;

        img {
          border: 0;
        }
      }
    }

    > nav {
      @extend #paper-stripe;
      background: $white;
      bottom: 0;
      box-shadow: 0 0 3px $black;
      font-size: 14px;
      font-weight: bold;
      padding: 20px 0 10px;
      position: fixed;
      text-align: center;
      width: 100%;
      z-index: 3;

      ul {
        margin: 0;
        padding: 0;

        li {
          display: inline-block;
          width: 140px;
          border-left: 1px solid #fff;
          box-shadow: -2px 0 0 -1px $gray;

          &:first-child {
            border-left: 0;
            box-shadow: none;
          }

          a {
            color: inherit;
            display: block;
            opacity: 0.75;
            padding: 5px 0;
            text-align: center;
            text-decoration: none;
            width: 100%;

            &:hover,
            &.active {
              opacity: 1;
            }
          }
        }
      }
    }

    .before-load {
      color: $white;
      font-size: 12px;
      font-weight: bold;
      text-align: center;
      text-shadow: 0 1px 1px $black
    }

    .zooniverse-top-bar {
      background: $white;
    }

    .main {
      z-index: 1;
      height 100%

      > * {
        display: none;

        &.active {
          display: block;
        }
      }

      a {
        color: inherit;
      }

      hr {
        height: 0;
        border: 1px solid transparent;
        border-top-color: rgba($black, 0.5);
        border-bottom-color: rgba($white, 0.25);
      }
    }
  }
}

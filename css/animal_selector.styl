    margin: 10px 0;
    position: absolute;
    text-align: right;
    top: 100%;
    width: 100%;

    button {
      font-weight: bold;
      margin: 0 10px;
      text-align: right;
      text-shadow: 0 1px 0 rgba($white, 0.25);
      width: 70px;
    }
  }

  .finished + & {
    opacity: 0.75;
    pointer-events: none;
  }

.animal-selector {
  background: $green-dark;
  border: 1px solid rgba($black, 0.75);
  border-radius: 5px;
  box-shadow: 0 2px 1px rgba($white, 0.25) inset, 0 1px 2px $black;
  box-sizing: border-box;
  color: $white;
  float: right;
  margin-top: 4px;
  outer-deboss: 5px;
  padding: 10px;
  position: relative;
  -webkit-tap-highlight-color: transparent;
  transition: opacity 0.5s ease-in-out;
  max-width: 405px;

  .general-filters {
    background: rgba($black, 0.33);
    border-radius: 3px;
    box-shadow: 0 2px 3px rgba($black, 0.5) inset;
    box-sizing: border-box;
    height: 50px;
    padding: 10px 5px;
    position: relative;
    text-align: left;

    .filter-menu {
      font-size: 14px;
      line-height: 30px;
      position: absolute;
      z-index: 1;

      button[name="characteristic"] {
        padding: 0 20px 0 10px;
        position: relative;
        text-shadow: 0 1px 1px $black;

        &:hover {
          box-shadow: 0 0 0 1px rgba($white, 0.5) inset;
        }

        &:after {
          border: 4px solid transparent;
          border-top-color: $white;
          content: "";
          height: 0;
          margin-top: -2px;
          position: absolute;
          right: 5px;
          top: 50%;
          width: 0;
        }
      }

      .menu {
        background: $white;
        box-shadow: 0 2px 3px $black;
        color: $green-dark;
        font-size: 12px;
        overflow: hidden;
        padding-top: 2px;
        right: 0;
        text-align: center;
        top: 100%;
        white-space: nowrap;

        button {
          border-top: 1px solid $gray;
          box-sizing: border-box;
          display: block;
          min-width: 100%;
          padding: 0 10px;

          &:hover,
          &.selected {
            background: $green;
            color: $white;
          }

          img {
            display: none;
          }
        }

        &.hidden {
          display: none;
        }
      }

      &.open {
        button[name="characteristic"] {
          background: $white;
          border-bottom: 1px solid $gray;
          color: $green-dark;
          text-shadow: none;
        }
      }
    }

    .search {
      display: inline-block;
      float: right;
      margin: 5px 5px 0 0;
      position: relative;

      i[rel="search"] {
        font-size: 12px;
        left: 7px;
        position: absolute;
        top: 4px;
        z-index: 1;
      }

      input[name="search"] {
        appearance: none;
        background: $black;
        border: 2px solid rgba($gray, 0.5);
        border-radius: 20px;
        box-sizing: border-box;
        color: $white;
        font-family: inherit;
        font-size: 12px;
        height: 20px;
        padding: 0 10px 0 20px;
        vertical-align: top;
        width: 160px;
      }
    }
  }

  .characteristic-filters {
    clearfix();
    padding: 5px 0;
    position: relative;

    .filter-menu {
      box-sizing: border-box;
      float: left;
      margin-left: 7px;
      width: 70px;
      [data-language="pl_pl"] &,
      [data-language="fi_fi"] & {
        font-size: 13px;
        letter-spacing: -1px;
      }

      &:first-child {
        margin-left: 0;
      }

      button[name="characteristic"] {
        @extend #standard-button;
        float: left;
        font-size: 12px;
        font-weight: bold;
        height: 22px;
        overflow: hidden;
        padding: 0;
        position: relative;
        white-space: nowrap;
        width: 100%;
      }

      .menu {
        background: lighten($green, 0.33);
        border: 1px solid $black;
        bottom: 100%;
        box-sizing: border-box;
        font-size: 12px;
        height: 50px;
        left: 0;
        opacity: 1;
        position: absolute;
        width: 100%;
        z-index: 1;

        &.hidden {
          display: none;
        }

        button[name="characteristic-value"] {
          background: url("images/characteristics-values.png");
          float: left;
          height: 40px;
          margin: 4px 0 0 5px;
          position: relative;
          width: 40px;

          &.selected {
            border: 1px solid $gold;
            margin: 3px 0 0 4px;
          }

          &[value="patternVerticalStripe"]   {background-position: -8px -152px;}
          &[value="patternHorizontalStripe"] {background-position: -56px -152px;}
          &[value="patternSpots"]            {background-position: -104px -152px;}
          &[value="patternSolid"]            {background-position: -152px -152px;}

          &[value="coatTanYellow"]           {background-position: -8px -56px;}
          &[value="coatOrange"]              {background-position: -56px -56px;}
          &[value="coatRedBrown"]            {background-position: -104px -56px;}
          &[value="coatBrownBlack"]          {background-position: -152px -56px;}
          &[value="coatWhite"]               {background-position: -200px -56px;}
          &[value="coatGray"]                {background-position: -248px -56px;}
          &[value="coatBlack"]               {background-position: -296px -56px;}

          &[value="hornsStraight"]           {background-position: -8px -104px;}
          &[value="hornsSimpleCurve"]        {background-position: -56px -104px;}
          &[value="hornsLyrate"]             {background-position: -104px -104px;}
          &[value="hornsCurly"]              {background-position: -152px -104px;}

          &[value="tailBushy"]               {background-position: -8px -200px;}
          &[value="tailSmooth"]              {background-position: -56px -200px;}
          &[value="tailTufted"]              {background-position: -104px -200px;}
          &[value="tailLong"]                {background-position: -152px -200px;}
          &[value="tailShort"]               {background-position: -200px -200px;}

          &[value="buildStocky"]             {background-position: -8px -8px;}
          &[value="buildTall"]               {background-position: -56px -8px;}
          &[value="buildLanky"]              {background-position: -104px -8px;}
          &[value="buildSmall"]              {background-position: -152px -8px;}
          &[value="buildLowSlung"]           {background-position: -200px -8px;}

          .label {
            background: $gold;
            bottom: 100%;
            border-radius: 3px;
            box-shadow: 0 1px 2px $black;
            color: $black;
            display: none;
            font-size: 10px;
            font-weight: bold;
            left: 50%;
            margin: 0 0 3px -10px;
            padding: 2px 10px;
            position: absolute;
            white-space: nowrap;
            z-index: 1;

            &:after {
              border: 5px solid transparent;
              border-top-color: $gold;
              content: "";
              left: 5px;
              position: absolute;
              top: 100%;
            }
          }

          &:hover .label {
            display: block;
          }
        }

        button[name="clear-characteristic"] {
          @extend #standard-button;
          float: right;
          margin: 11px 7px 0 0;
          text-align: center;
        }
      }

      &.open button[name="characteristic"] {
        background: lighten($green, 0.33);

        &:after {
          border: 6px solid transparent;
          border-bottom-color: lighten($green, 0.33);
          bottom: 100%;
          content: "";
          height: 0;
          margin: 0 0 -1px -6px;
          position: absolute;
          left: 50%;
          width: 0;
        }
      }

      &.in-use button[name="characteristic"] {
        background: rgba($white, 0.25);
      }
    }
  }

  .selection-area {
    background: rgba($black, 0.33);
    border-radius: 3px;
    box-shadow: 0 2px 3px rgba($black, 0.5) inset;
    overflow: auto;

    .items {
      clearfix();
      height: 394px;
      margin: 0 -1px;
      position: relative;

      [data-animal] {
        border: 1px solid $green-dark;
        box-sizing: border-box;
        cursor: pointer;
        float: left;
        font-size: 14px;
        opacity: 1;
        transition: opacity 0.25s ease-in-out;

        [data-language="pl_pl"] & {
          font-size: 11px;
          letter-spacing: -1px;
        }

        [data-language="fi_fi"] & {
          font-size: 10px;
          letter-spacing: -1px
        }

        &:hover {
          background: rgba($black, 0.67);
        }

        &:focus {
          border: 1px solid rgba($gold, 0.5);
          outline: none;
        }

        &.dimmed {
          opacity: 0.33;
        }

        &.hidden {
          display: none;
        }

        .image {
          @extends #thumb-for;
        }

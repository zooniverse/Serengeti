$black = #140b03;
$white = #f9f8f3;

$red = #d32323;
$red-dark = #7c011c;

$green = #525b46;
$green-light = #85937a;
$green-dark = #2b2e27;

$green-really = #490; // TODO

$gray = #dcdcdc;

$brown = #813e1e;

$gold = #fc0; // TODO

paper-stripe() {
  &:before {
    border: 1px solid $gray;
    border-width: 1px 0;
    content: " ";
    height: 2px;
    left: 0;
    position: absolute
    top: 10px;
    width: 100%;
  }
}

standard-button($color = $green-dark) {
  background: $color;
  border: 1px solid rgba($black, 0.5);
  border-radius: 2px;
  box-shadow: 0px 1px 0px rgba($white, 0.125) inset, 0 1px 3px rgba($black, 0.75);
  box-sizing: border-box;
  color: $gray;
  display: inline-block;
  font: inherit;
  padding: 3px 8px 3px 8px;
  position: relative;
  text-align: center;
  text-decoration: none;
  text-shadow: 0 1px 1px $black;
  vertical-align: middle;

  &:hover {
    border-color: $black;
  }

  &:active {
    background: darken($color, 25%);
    box-shadow: 0 1px 0 rgba($black, 0.25) inset;
  }

  &:disabled,
  &.disabled {
    opacity: 0.5;
  }
}

outer-deboss($distance) {
  &:before {
    background: rgba($black, 0.25);
    border-radius: $distance;
    box-shadow: 0 1px 2px rgba($black, 0.5) inset, 0 -1px 0px rgba($white, 0.25) inset;
    content: "";
    height: 100%;
    left: 0 - $distance;
    padding: $distance $distance ($distance + 1);
    position: absolute;
    top: 0 - $distance;
    width: 100%;
    z-index: -1;
  }
}

standard-toggle() {
  color: transparent;
  height: 20px;
  position: relative;
  text-shadow: none;
  width: 20px;

  &:before {
    background: rgba($black, 0.5);
    border-radius: 50%;
    box-shadow: 0 1px 0 rgba($black, 0.5) inset, 0 1px 0 rgba($white, 0.5);
    content: ' ';
    height: 10px;
    left: 50%;
    margin: -5px 0 0 -5px;
    overflow: hidden;
    position: absolute;
    top: 50%;
    width: 10px;
  }

  &.active:after {
    background: rgba($white, 0.5);
    border-radius: 50%;
    box-shadow: 0 1px 0 $white inset;
    content: ' ';
    height: 6px;
    left: 50%;
    margin: -3px 0 0 -3px;
    overflow: hidden;
    position: absolute;
    top: 50%;
    width: 6px;
  }
}

.about-page {
  font-size: 12px;
  padding: 50px 100px;

  > section {
    clearfix();
    display: none;

    &.active {
      display: block;
    }

    .column {
      box-sizing: border-box;
      float: left;
      width: 50%;

      & + .column {
        padding-left: 30px;
      }
    }
  }

  > nav {
    color: rgba($black, 0.75);
    left: -2px;
    position: absolute;
    text-shadow: -1px 1px rgba($white, 0.5);
    top: 70px;

    button {
      clearfix();
      border-radius: 2px 0 0 2px;
      display: block;
      font-weight: bold;
      margin-bottom: 10px;
      padding: 5px 10px 5px 15px;
      position: relative;
      opacity: 0.5;
      text-align: center;

      &:before,
      &:after {
        border: 30px solid rgba($red, 0);
        border-left-width: 0;
        border-right-width: 10px;
        content: "";
        position: absolute;
        right: -10px;
      }

      &:before {
        top: 0;
      }

      &:after {
        bottom: 0;
      }

      &.active {
        background: $green-light;
        opacity: 1;

        &:before {
          border-top-color: $green-light;
        }

        &:after {
          border-bottom-color: $green-light;
        }
      }

      i {
        clear: left;
        float: left;
        font-size: 30px;
        position: relative;
        width: 1.25em;
        z-index: 1;
      }

      big {
        display: block;
        font-size: 2em;
        line-height: 1;
      }
    }
  }

  .column {
    &.content {
      width: 67%;
    }

    &.sidebar {
      font-size: 10px;
      width 33%;
    }
  }

  ul {
    padding-left: 0;

    li {
      margin: 1em 1.25em;
    }
  }

  img {
    max-width: 100%;

    &.framed {
      border: 3px solid #fff;
      box-shadow: 0 2px 3px -1px rgba($black, 0.5);
      box-sizing: border-box;
    }
  }

  .member {
    h3 {
      margin: 0;

      a {
        text-decoration: none;
      }
    }

    p {
      margin: 0;
    }

    &.organization {
      clearfix();
      margin: 20px 0;

      img {
        float: left;
        margin-right: 20px;
        width: 80px;
      }

      .description {
        margin-left: 105px;
      }
    }

    &.team {
      clearfix();
      clear: left;
      font-size: 10px;
      margin: 20px 0;

      img {
        border: 3px solid #fff;
        box-shadow: 0 2px 3px -1px rgba($black, 0.5);
        float: left;
        height: 50px;
        margin-right: 10px;
        width: 40px;
      }

      .description {
        margin-left: 60px;
      }
    }
  }
}

@media screen and (max-width: 1200px) {
  .about-page {
    padding: 0 10px 0 100px;
    .column {
      &.content {
        width: 100%;
      }
      &.sidebar {
        width: 100%;
      }
    }
    > section .column {
      width: 100%;
      + .column {
        padding-left: 0px;
      }
    }
  }
}

@media screen and (max-width: 500px) {
  .about-page .member.organization .description {
    margin-left: 0px;
  }
}

